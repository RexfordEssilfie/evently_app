<div class="row">
    <div class="col-md-6 col-md-offset-3">
<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= form.label "Your Email" %>
    <%= form.text_field :email,  class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label "Event Name" %>
    <%= form.text_field :name,  class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description,  class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_select :start_time, { prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 15 }, { class: 'form-control' } %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.time_select :end_time, { prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 15 }, { class: 'form-control' } %>
  </div>

  <div class="field">
    <%= form.label :visibility %>
    <%= form.text_area :visibility,  class: "form-control" %>
  </div>

    <%= form.submit "Create Event", class: "cta" %>
<% end %>

   </div>
</div>